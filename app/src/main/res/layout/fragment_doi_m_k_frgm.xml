<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/gray2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

        <ImageView
            android:id="@+id/btnBackDoiMK"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_to_back"
            android:layout_marginLeft="15dp"
            />

        <TextView
            style="@style/edt_Label"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Đổi Mật Khẩu"
            android:textSize="30dp"
            android:fontFamily="@font/ct_font_bold"
            android:layout_marginRight="30dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

            <TextView
                style="@style/edt_Label"
                android:text="Mật Khẩu Cũ"
                android:textColor="@color/red"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/edOldPass"
                style="@style/edt_TextBox2"
                android:hint="Nhập Mật Khẩu Cũ"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"
                android:drawableEnd="@drawable/ic_visibility_off"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

            <TextView
                style="@style/edt_Label"
                android:text="Mật Khẩu Mới"
                android:textColor="@color/red"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/edNewPass"
                style="@style/edt_TextBox2"
                android:hint="Nhập Mật Khẩu Mới"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"
                android:drawableEnd="@drawable/ic_visibility_off"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

            <TextView
                style="@style/edt_Label"
                android:text="Xác Nhận Mật Khẩu"
                android:textColor="@color/red"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/edConfirmPass"
                style="@style/edt_TextBox2"
                android:hint="Nhập Xác Nhận Mật Khẩu"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"
                android:drawableEnd="@drawable/ic_visibility_off"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >

            <EditText
                android:id="@+id/btnCancel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bo_tron_edt"
                android:backgroundTint="@color/red"
                android:text="Hủy"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:fontFamily="@font/ct_font_medium"
                android:textStyle="bold"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:editable="false"
                android:focusable="false"
                android:layout_marginRight="15dp"
                />

            <EditText
                android:id="@+id/btnChange"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bo_tron_edt"
                android:backgroundTint="@color/red"
                android:text="Xác Nhận"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:fontFamily="@font/ct_font_medium"
                android:textStyle="bold"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:editable="false"
                android:focusable="false"
                />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>